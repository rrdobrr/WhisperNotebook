# ===================================
# WhisperTranscriber Environment Variables
# ===================================
# Минимальная конфигурация для Railway deployment
# Все остальные настройки определяются автоматически

# -----------------------------------
# AUTHENTICATION (рекомендуется для защиты)
# -----------------------------------
# Если установлены - приложение будет защищено паролем
# Если не установлены - приложение будет публично доступно
AUTH_USERNAME=admin
AUTH_PASSWORD=your_secure_password_here

# Срок действия токена в днях (по умолчанию 30)
# Определяет, как часто нужно вводить пароль заново
JWT_EXPIRATION_DAYS=30

# -----------------------------------
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# -----------------------------------

# OpenAI API ключ (можно также добавить через UI настроек)
OPENAI_API_KEY=

# Демо-режим для тестирования без API ключей (по умолчанию false)
DEMO_MODE=false
